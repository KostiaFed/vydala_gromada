<div class="p-4 catalog-page">
  <h4 class="mb-2">Популярні збори</h4>
  <div class="d-flex flex-wrap justify-content-between">
    <% Book.all.each do |book| %>
      <div class="d-flex justify-content-center border book-block mb-2">
        <div class="m-3 content-block">
          <div class="image-block">
            <%= image_tag book.cover, class: "book-cover" %>
          </div>
          <h5><%= book.name %></h5>
          <div class="mb-2 text-gromada-green"><%= book.user.full_name %></div>
          <div class="d-flex flex-wrap">
            <% book.genres.all.each do |genre| %>
              <div class="px-1 tag border-gromada-green text-gromada-green"><%= genre.name %></div>
            <% end %>
          </div>
          <p><%= book.description %></p>
        </div>
      </div>
    <% end %>
    <div class="container">
      <div class="d-flex justify-content-center">
        <%= link_to root_path, class: "btn btn-outline-secondary py-2 px-4 text-dark" do %>
          <img src="page.svg"/>
          Показати більше
          <img src="page.svg"/>
        <% end %>
      </div>
    </div>
  </div>
</div>