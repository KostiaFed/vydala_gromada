<%= form_with url: book_payments_path(@book), method: :post, local: true,
      html: { class: 'flex flex-col px-6 pb-6 gap-2', data: { controller: "payment", action: "submit->payment#submit", payment_target: "form" } } do |f| %>
  <%= f.label :amount, "Сума внеску (грн)" %>
  <%= f.number_field :amount %>
  <%= f.submit "Підтримати", class: 'bg-gromada-green rounded-sm py-2 px-4 w-fit font-medium' %>
<% end %>
