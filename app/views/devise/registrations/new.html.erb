<div class="d-flex flex-wrap justify-content-center"><h1>Зареєструватись</h1></div>

<div class="d-flex flex-wrap justify-content-center mb-4" data-turbo="false">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div style="width: 500px;">
    <span class="fs-4 text-gromada-black">Електронна пошта</span><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-lg" %>
  </div>

  <div>
    <span class="fs-4 text-gromada-black">Пароль</span><br/>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control input-lg mb-2"%>
  </div>

  <div>
    <span class="fs-4 text-gromada-black">Підтвердіть пароль</span><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control input-lg mb-2"%>
  </div>

  <div class="d-flex flex-wrap justify-content-center">
    <div class="my-3">
      <%= f.submit "Зареєструватися", class: "border-0 fs-5 fw-bold bg-gromada-light-green text-gromada-green py-2 px-5" %>
    </div>
  </div>
  <div class="d-flex flex-wrap justify-content-center">
    <span>Вже маєте акаунт? <%= link_to "Увійти", new_user_session_path, class: "text-gromada-green" %></span>
  </div>
<% end %>
</div>
