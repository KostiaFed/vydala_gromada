<div class="d-flex flex-wrap justify-content-center"><h1>Відновити пароль</h1></div>

<div class="d-flex flex-wrap justify-content-center mb-4" data-turbo="false">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div style="width: 500px;">
    <span class="fs-4 text-gromada-black">Електронна пошта</span><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-lg" %>
  </div>

  <div class="d-flex flex-wrap justify-content-center">
    <div class="my-3">
      <%= f.submit "Надіслати інструкцію з відновлення паролю", class: "border-0 fs-5 fw-bold bg-gromada-light-green text-gromada-green py-2 px-5" %>
    </div>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
</div>
