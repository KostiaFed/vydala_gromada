<% if resource.nil? %>
  <label class="flash">
    <input type="checkbox" class="alertCheckbox" autocomplete="off" />
    <div class="alert py-2 px-2 bg-gromada-lime">
      <span class="alertClose">X</span>
      <span class="alertText">Щось пішло не так...
      <br class="clear"/></span>
    </div>
  </label>
<% elsif resource.errors.any? %>
  <% resource.errors.full_messages.each do |message| %>
    <label class="flash">
      <input type="checkbox" class="alertCheckbox" autocomplete="off" />
      <div class="alert py-2 px-2 bg-gromada-lime">
        <span class="alertClose">X</span>
        <span class="alertText"><%= message %>
        <br class="clear"/></span>
      </div>
    </label>
  <% end %>
<% end %>
